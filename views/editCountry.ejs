<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>UN Countries</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <%- include('partials/navbar', {page: '' }) %>

    <div class="container mx-auto p-4">

      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center ">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Edit Country: <%= country.name %></h1>

            <p class="py-6">Use the below form to update the Country "<%= country.name %>" </p>

          </div>
        </div>
      </div>

      <br />

      <form action="/un/editCountry" method="post">

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">
          <div>
            <div class="mb-6">
              <label for="name" class="block text-gray-700 font-medium">Name</label>
              <input type="text" id="name" name="name" required value="<%= country.name %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
            <div class="mb-6">
              <label for="regionId" class="block text-gray-700 font-medium">Region</label>
              <select id="regionId" name="regionId" required
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                <% regions.forEach(region=>{ %>
                  <option <%= (country.regionId == region.id) ? "selected" : "" %> value="<%= region.id %>">
                    <%= region.name %>
                  </option>
                <% }) %>
                
              </select>
            </div>
            <div class="mb-6">
              <label for="population" class="block text-gray-700 font-medium">Population</label>
              <input type="number" id="population" name="population" required value="<%= country.population %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
          </div>

          
          <div>
            <div class="mb-6">
              <label for="official" class="block text-gray-700 font-medium">Official Name</label>
              <input type="text" id="official" name="official" required value="<%= country.official %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
            <div class="mb-6">
              <label for="a2code" class="block text-gray-700 font-medium">Alpha 2 Code</label>
              <input type="text" id="a2code" name="a2code" required readonly style="background-color: lightgrey;" value="<%= country.a2code %>"
                class="w-full opacity-50 cursor-not-allowed border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 ">
            </div>
            <div class="mb-6">
              <label for="languages" class="block text-gray-700 font-medium">Languages</label>
              <input type="text" id="languages" name="languages" required value="<%= country.languages %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
          </div>


          <div>

            <div class="mb-6">
              <label for="nativeName" class="block text-gray-700 font-medium">Native Name</label>
              <input type="text" id="nativeName" name="nativeName" required value="<%= country.nativeName %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>

            <div class="mb-6">
              <label for="capital" class="block text-gray-700 font-medium">Capital</label>
              <input type="text" id="capital" name="capital" required value="<%= country.capital %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
            <div class="mb-6">
              <label for="permanentUNSC" class="block text-gray-700 font-medium">In Permanent UNSC Member?</label>
              <!-- <input type="checkbox" id="permanentUNSC" name="permanentUNSC" required
                class="checkbox"> -->
                <label id="permanentUNSC" class="label cursor-pointer justify-center">
                  <input type="checkbox" name="permanentUNSC" class="checkbox"  <%= country.permanentUNSC ? "checked" : "" %>/>
                  <span class="label-text px-2"></span>
                </label>
            </div>

          </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 gap-y-0">

            <div class="mb-6">
              <label for="wikipediaURL" class="block text-gray-700 font-medium">Wikipedia URL</label>
              <input type="url" id="wikipediaURL" name="wikipediaURL" required value="<%= country.wikipediaURL %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
            <div class="mb-6">
              <label for="flag" class="block text-gray-700 font-medium">Flag Image URL</label>
              <input type="url" id="flag" name="flag" required value="<%= country.flag %>"
                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
            </div>
        </div>


        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-6 gap-y-0">
          <div class="mt-6">
            <button type="submit" class="btn btn-secondary w-full">Update Country</button>
          </div>
          <div class="mt-6">
            <a href="/un/deleteCountry/<%= country.a2code %>" class="btn btn-error w-full">Delete Country</a>
          </div>
        </div>

      </form>
    </div>

</body>
</html>
